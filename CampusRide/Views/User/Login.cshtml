@model CampusRide.Models.User

<div class="badi">
    <div class="login-container bg-light">
        <h1>Giriş Yap</h1>
        @using (Html.BeginForm("Login", "User", FormMethod.Post))
        {
            <div>
                @Html.LabelFor(m => m.PhoneNumber, "Telefon Numarası")
                @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "05xxxxxxxxx" })
                @Html.ValidationMessageFor(m => m.PhoneNumber)
            </div>
            <div>
                @Html.LabelFor(m => m.Password, "Şifre")
                @Html.PasswordFor(m => m.Password, new { placeholder = "**********" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <button type="submit">Login</button>
        }

        <div class="register-link">
            Hesabın yok mu? <a href="/User/Register">Kayıt Ol</a>
        </div>
    </div>
</div>