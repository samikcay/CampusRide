@model CampusRide.Models.MessageViewModel

@{
    ViewData["Title"] = "Yeni Mesaj Oluştur";
}

<h2>Yeni Mesaj Oluştur</h2>

<form asp-controller="Messages" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="SenderId">Gönderen</label>
        <input asp-for="SenderId" class="form-control" />
        <span asp-validation-for="SenderId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReceiverId">Alıcı</label>
        <input asp-for="ReceiverId" class="form-control" />
        <span asp-validation-for="ReceiverId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content">Mesaj İçeriği</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>
